{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./public/js",
    "rootDir": "./public/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["public/js/**/*"],
  "exclude": ["node_modules"]
} 